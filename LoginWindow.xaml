<Window x:Class="DentalClinicApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinicApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Логин:"/>
        <TextBox x:Name="LoginTextBox" Grid.Row="0" Margin="50,0,0,10"/>
        <Label Content="Пароль:" Grid.Row="1"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="50,0,0,10"/>
        <Button Content="Войти" Grid.Row="2" Margin="0,10" Click="LoginButton_Click"/>
        <Button Content="Регистрация" Grid.Row="3" Margin="0,10" Click="RegisterButton_Click"/>
    </Grid>
</Window>

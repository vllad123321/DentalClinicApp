<Window x:Class="DentalClinicApp.AddApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DentalClinicApp"
        mc:Ignorable="d"
        Title="AddApplicationWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Заголовок:"/>
        <TextBox x:Name="ArticleTextBox" Grid.Row="0" Margin="122,0,0,10"/>
        <Label Content="Краткое описание:" Grid.Row="1"/>
        <TextBox x:Name="ShortDescriptionTextBox" Grid.Row="1" Margin="122,0,0,10"/>
        <Label Content="Тип:" Grid.Row="2"/>
        <TextBox x:Name="TypeTextBox" Grid.Row="2" Margin="122,0,0,10"/>
        <Label Content="Полное описание:" Grid.Row="3"/>
        <TextBox x:Name="FullDescriptionTextBox" Grid.Row="3" Margin="122,0,0,10" AcceptsReturn="True"/>
        <Label Content="Дата создания:" Grid.Row="4"/>
        <DatePicker x:Name="CreationDatePicker" Grid.Row="4" Margin="122,0,0,10"/>
        <Label Content="Номер заявки:" Grid.Row="5"/>
        <TextBox x:Name="RegistrationNumberTextBox" Grid.Row="5" Margin="122,0,0,10"/>
        <Button Content="Сохранить" Grid.Row="6" Margin="0,10" Click="SaveButton_Click"/>
    </Grid>
</Window>
